<p>
  <strong>Image:</strong>
  <%= @picture.image %>
</p>

<%= image_tag @picture.image.url %>

<p>
  <strong>User:</strong>
  <%= @picture.user_id %>
</p>

<p><%= link_to 'Destroy', @picture, method: :delete, data: { confirm: 'Are you sure?' } %></p>

<%= link_to 'Back', pictures_path %>

<h3>Comment on This Picture</h3>
<%= form_for [@picture, Comment.new] do |f| %>
  <%= f.label :text %><br>
  <%= f.text_area :text %><br>
  <%= f.hidden_field :picture_id, value: @picture.id %>
  <%= f.submit %>
<% end %>

<h3>Comments:</h3>
<ul>
  <% @picture.comments.each do |comment| %>
  <li><%= comment.text %></li>
  <% end %>
</ul>
